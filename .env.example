# TownRanker Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/townranker

# Admin Authentication
ADMIN_PASSWORD=your_secure_admin_password

# Email Configuration
EMAIL_HOST=your_email_host
EMAIL_PORT=993
EMAIL_USER=your_email@domain.com
EMAIL_PASS=your_email_password
EMAIL_SECURE=true
GMAIL_APP_PASSWORD=your_gmail_app_password

# Google Calendar / OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_API_KEY=your_google_api_key
# Optional override if you need a custom callback URL (defaults provided automatically)
GOOGLE_REDIRECT_URI=http://localhost:3001/api/calendar/oauth2callback

# OpenPhone API Configuration
OPENPHONE_API_KEY=your_openphone_api_key
OPENPHONE_PHONE_NUMBER=+1234567890
OPENPHONE_WEBHOOK_SECRET=your_webhook_secret

# iMessage Bridge Configuration (Optional)
BLUEBUBBLES_SERVER_URL=http://your-mac-ip:1234
BLUEBUBBLES_PASSWORD=your_bluebubbles_password

# Messaging Feature Flags
ENABLE_IMESSAGE=false
PREFER_IMESSAGE=false

# Security
JWT_SECRET=your_jwt_secret_key

# SerpAPI (for search functionality)
SERPAPI_KEY=your_serpapi_key

# Application URLs
BASE_URL=https://townranker.com
